---
import { actions } from "astro:actions";

import Layout from "@/Layout.astro";

import Input from "@/components/Input";

import Button from "@/components/Button";

const result = Astro.getActionResult(actions.authentication.sign_up);

if (result?.data) {
  Astro.cookies.set(
    //
    "token",
    //
    result.data,
    //
    {
      path: "/",
      secure: true,
      httpOnly: true,
    },
  );

  return Astro.redirect("/");
}
---

<Layout>
  <form
    class="w-full max-w-xs m-auto space-y-4"

    method="POST"

    action={actions.authentication.sign_up}

    data-astro-reload
  >
    <h1 class="text-xl font-semibold">
      Sign Up
    </h1>

    <div class="space-y-2">
      <div
        class="flex gap-2"

        transition:animate="slide"
      >
        <label class="w-full space-y-2">
          <div>Username</div>

          <Input
            sx="w-full h-10"

            type="text"

            name="username"

            minlength="3"

            maxlength="24"

            pattern="^[a-zA-Z0-9]*$"

            required

            placeholder="Username"
          />
        </label>

        <label class="w-full space-y-2">
          <div>Password</div>

          <Input
            sx="w-full h-10 font-sans"

            type="password"

            name="password"

            minlength="8"

            maxlength="64"

            required

            placeholder="****************"
          />
        </label>
      </div>

      <label
        class="block space-y-2"

        transition:animate="slide"
      >
        <span>Invitation</span>

        <Input
          sx="w-full h-10 font-sans"

          type="password"

          name="invite_id"

          minlength="36"

          maxlength="36"

          required

          placeholder="************************************"

          data-1p-ignore
        />
      </label>

      <a
        class="block cursor-pointer transition text-zinc-500 hover:text-zinc-400 active:text-zinc-300"

        href="/sign-in"
      >
        I already have an account
      </a>

      <Button sx="w-full h-10">
        Continue
      </Button>

      {
        result?.error && (
          <div
            class="absolute text-zinc-500 left-1/2 transform -translate-x-1/2"
          >
            {result.error.message}
          </div>
        )
      }
    </div>
  </form>
</Layout>
